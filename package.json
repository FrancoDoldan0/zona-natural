{
  "name": "zona-natural",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint .",
    "db:studio": "drizzle-kit studio",
    "format": "prettier -w .",
    "db:migrate": "prisma migrate dev --name init",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "preview": "wrangler pages dev .vercel/output/static --compatibility-date=2025-08-18",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "node prisma/seed.js",
    "prisma:generate": "prisma generate",
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "cf:build": "npx @cloudflare/next-on-pages@latest",
    "cf:deploy": "wrangler pages deploy .vercel/output/pages"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcryptjs": "3.0.2",
    "drizzle-orm": "^0.33.0",
    "jose": "6.0.12",
    "next": "14.2.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.15",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.23",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.4",
    "eslint-plugin-next-on-pages": "^1.13.15",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "prisma": "^6.14.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.5",
    "wrangler": "^3.114.14"
  }
}

